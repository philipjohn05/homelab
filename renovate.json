{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "kubernetes": {
    "fileMatch": ["\\.ya?ml$"]
  },
  "flux": {
    "fileMatch": [
      "clusters/.+\\.ya?ml$",
      "infrastructure/.+\\.ya?ml$",
      "apps/.+\\.ya?ml$"
    ]
  },
  "docker": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Disable Docker Hub - authentication issues with self-hosted Renovate",
      "matchDatasources": ["docker"],
      "matchRegistries": ["docker.io", "index.docker.io", "hub.docker.com"],
      "enabled": false
    },
    {
      "matchDatasources": ["docker"],
      "timeout": 120000
    }
  ]
}
