{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "kubernetes": {
    "fileMatch": ["\\.ya?ml$"]
  },
  "flux": {
    "fileMatch": [
      "clusters/.+\\.ya?ml$",
      "infrastructure/.+\\.ya?ml$",
      "apps/.+\\.ya?ml$"
    ]
  },
  "docker": {
    "enabled": true
  },
  "hostRules": [
    {
      "matchHost": "docker.io",
      "hostType": "docker",
      "username": "pjsleepless",
      "password": "{{ secrets.RENOVATE_PASSWORD }}"
    },
    {
      "matchHost": "index.docker.io",
      "hostType": "docker",
      "username": "pjsleepless",
      "password": "{{ secrets.RENOVATE_PASSWORD }}"
    },
    {
      "matchHost": "hub.docker.com",
      "hostType": "docker",
      "username": "pjsleepless",
      "password": "{{ secrets.RENOVATE_PASSWORD }}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "timeout": 120000
    }
  ]
}
