{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": ["\\.ya?ml$"]
  },
  "flux": {
    "fileMatch": [
      "clusters/.+\\.ya?ml$",
      "infrastructure/.+\\.ya?ml$",
      "apps/.+\\.ya?ml$"
    ]
  },
  "hostRules": [
    {
      "matchHost": "docker.io",
      "socketTimeout": 120000,
      "username": "${RENOVATE_DOCKER_USERNAME}",
      "password": "${RENOVATE_DOCKER_PASSWORD}"
    }
  ]
}
