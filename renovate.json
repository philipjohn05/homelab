{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": ["\\.ya?ml$"]
  },
  "flux": {
    "fileMatch": [
      "clusters/.+\\.ya?ml$",
      "infrastructure/.+\\.ya?ml$",
      "apps/.+\\.ya?ml$"
    ]
  },
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "index.docker.io",
      "timeout": 60000,
      "abortOnError": false,
      "concurrentRequestLimit": 2
    }
  ]
}
