{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "kubernetes": {
    "fileMatch": ["\\.ya?ml$"]
  },
  "flux": {
    "fileMatch": [
      "clusters/.+\\.ya?ml$",
      "infrastructure/.+\\.ya?ml$",
      "apps/.+\\.ya?ml$"
    ]
  },
  "docker": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Disable Docker Hub images - authentication issues",
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^[^/]+/[^/]+$"],
      "enabled": false
    }
  ]
}
